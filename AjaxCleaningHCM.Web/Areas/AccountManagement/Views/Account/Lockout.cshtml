@model AjaxCleaningHCM.Core.UserManagment.Identity.User

@{
    ViewData["Title"] = "Lockout";

    ViewData["ControllerName"] = "Account";
    ViewData["ActionName"] = "Lockout";
    string btnValue = string.Empty;
}

<!-- Default box -->
<div class="card">
    <div class="card-header">
        <a class="box-title col-md-2" asp-action="Index"><i class="fa fa-arrow-left text-green"></i>  Back to List </a>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="container">
                    <div class="alert alert-default-warning alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>

                        @if (!ViewBag.LockedOut)
                        {
                            btnValue = "Unlock";
                            <h5><i class="icon fa fa-info-circle"></i> User account is locked</h5>
                            <h4>Are you sure you want to unlock this account?</h4>
                            <p>Info: User will be able to login to the system.</p>
                        }
                        else
                        {
                            btnValue = "Lock";
                            <h5><i class="icon fa fa-info-circle"></i> User account is not locked</h5>
                            <h4>Are you sure you want to lockout this account?</h4>
                            <p>Info: User will no more be able to login to the system.</p>
                        }
                    </div>
                    <dl class="row">

                        @*<dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.EmployeeDetails.FullName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.EmployeeDetails.FullName)&nbsp;
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.EmployeeDetails.EmployeeId)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.EmployeeDetails.EmployeeId)&nbsp;
                        </dd>*@

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Email)&nbsp;
                        </dd>

                    </dl>
                    <form asp-action="Lockout">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="LockedOut" value="@ViewBag.LockedOut" />
                        <input type="submit" value="@btnValue" class="btn btn-danger" />
                    </form>
                </div>
            </div>
            <!-- /.row -->
        </div>
    </div>
</div>

