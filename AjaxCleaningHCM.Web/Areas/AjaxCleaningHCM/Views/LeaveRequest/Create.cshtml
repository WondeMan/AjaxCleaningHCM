@model AjaxCleaningHCM.Domain.Models.MasterData.LeaveRequest
@{
    Layout = "_Default";
}

@if (TempData["message"] != null && !string.IsNullOrEmpty(TempData["message"].ToString()))
{
    <p class="text-danger error-message">@TempData["message"]</p>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" asp-controller="LeaveRequest" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="EmployeeId" class="control-label">Select Employee</label>
                    <select asp-for="EmployeeId" class="form-control select2" asp-items="@ViewBag.Employees">
                        <option value="">Select Employee</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4 ForLeave">
                    <label asp-for="LeaveTypeId" class="control-label">Leave Type</label>
                    <select id="LeaveTypeId" asp-for="LeaveTypeId" class="form-control select2" asp-items="@ViewBag.LeaveTypes">
                        <option value="">Select Leave Type</option>
                    </select>
                    <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Year" class="control-label">Year</label>
                    <select asp-for="Year" class="form-control" asp-items="@ViewBag.Years">
                        <option value="">Select Year</option>
                       
                    </select>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="StartDate" class="control-label">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="NumberOfWorkingDay" class="control-label">Number of Working Days</label>
                    <input asp-for="NumberOfWorkingDay" type="number" class="form-control" />
                    <span asp-validation-for="NumberOfWorkingDay" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="NumberOfHolidayDay" class="control-label">Number of Weekends & Holidays</label>
                    <input asp-for="NumberOfHolidayDay" type="number" class="form-control" />
                    <span asp-validation-for="NumberOfHolidayDay" class="text-danger"></span>
                </div>

                <div class="form-group col-md-8">
                    <label asp-for="Remark" class="control-label">Remark</label>
                    <textarea asp-for="Remark" class="form-control"></textarea>
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group text-end mt-3">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>
