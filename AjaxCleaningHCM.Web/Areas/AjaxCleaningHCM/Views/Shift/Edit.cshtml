@{
    Layout = "_Default";
}
@using AjaxCleaningHCM;
@model AjaxCleaningHCM.Domain.DTO.MasterData.Response.ShiftDto

<div class="card">
    @using (Html.BeginForm("Edit", "Shift", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-md-4 col-lg-3">
                <label class="control-label">Shift Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <input asp-for="Id" hidden class="form-control" />

            <div class="form-group col-md-2 col-lg-2 d-flex align-items-end">
                <button id="submit" class="btn btn-primary" type="submit">Update</button>
            </div>
        </div>
    }
</div>
