@model AjaxCleaningHCM.Domain.Models.Helper.MenuBuilder
@{
    Layout = "_Default";
}
<form asp-area="AjaxCleaningHCM" asp-controller="MenuBuilder" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-4 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
                <label asp-for="LinkText" class="control-label"></label>
                <input asp-for="LinkText" id="LinkText" placeholder="Link Text" class="form-control" />
                <span asp-validation-for="LinkText" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
                <label asp-for="LinkUrl" class="control-label"></label>
                <input asp-for="LinkUrl" id="LinkUrl" placeholder="Link Url" class="form-control" />
                <span asp-validation-for="LinkUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" id="Icon" placeholder="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" id="Order" placeholder="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" asp-items="@ViewBag.MenuBuilder" class="form-control MenuBuilder select2">
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="form-group pl-2">
            <button type="submit" role="button" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>


