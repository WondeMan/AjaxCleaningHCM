@{
    Layout = "_Default";
}
@using AjaxCleaningHCM;
@model AjaxCleaningHCM.Domain.DTO.MasterData.Response.BranchsResponseDto;

<table class="table table-striped" id="table">
    <thead>
        <tr>
            <th>Branch Code</th>
            <th>Branch Name</th>
            <th>Description</th>
            <th>Address</th>
            <th>City</th>
            <th>Physical Location</th>
            <th>Phone</th>
            <th>Number Of Employees</th>
            <th>Email Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BranchDtos)
        {
            <tr id="row-@item.Id">
                <td>@item.BranchCode</td>
                <td>@item.BranchName</td>
                <td>@item.Description</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.PhysicalLocation</td>
                <td>@item.Phone</td>
                <td>@item.NumberOfEmployees</td>
                <td>@item.EmailAddress</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                    <a class="btn " onclick="deleteEntity('Branch', '@item.Id')"><i class="fas fa-trash text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
