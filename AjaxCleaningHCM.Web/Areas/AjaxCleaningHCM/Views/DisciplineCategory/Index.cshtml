@model AjaxCleaningHCM.Domain.DTO.MasterData.Response.DisciplineCategoryResponseDtos
@{
    Layout = "_Default";
}
<div class="table-responsive">
    <table id="table" class="table table-striped">
        <thead>
            <tr>
                <th>
                    No
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisciplineCategoryDtos.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisciplineCategoryDtos.FirstOrDefault().Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisciplineCategoryDtos.FirstOrDefault().Description)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 0;
            }
            @foreach (var item in Model?.DisciplineCategoryDtos?.ToList())
            {
                index++;
                <tr>
                    <td>@index</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <div class="action-icons">
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit text-info"></i></a> |
                            <a class="btn" onclick="deleteEntity('DisciplineCategory','@item.Id')"><i class="fas fa-trash text-danger"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
